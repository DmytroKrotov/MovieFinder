 @{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="container mx-auto p-4">
        <section class="bg-orange-300 shadow-md rounded-lg p-4">
            <h2 class="text-2xl font-semibold mb-4">Контакти</h2>
            <form class="space-y-4">
                <div>
                    <label for="name" class="block text-gray-700">Ім'я</label>
                    <input type="text" id="name" class="w-full border border-gray-300 rounded-md p-2" placeholder="Ваше ім'я">
                </div>
                <div>
                    <label for="email" class="block text-gray-700">Електронна пошта</label>
                    <input type="email" id="email" class="w-full border border-gray-300 rounded-md p-2" placeholder="Ваш email">
                </div>
                <div>
                    <label for="message" class="block text-gray-700">Повідомлення</label>
                    <textarea id="message" class="w-full border border-gray-300 rounded-md p-2" placeholder="Ваше повідомлення"></textarea>
                </div>
                <button type="submit" class="bg-blue-600 text-white rounded-md px-4 py-2">Відправити</button>
            </form>
        </section>
    </div>>
</div>
