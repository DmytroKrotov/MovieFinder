@{
    ViewData["Title"] = "Home Page";
    var bestMovie=ViewData["BestMovie"] as Movie;
    var newMovie=ViewData["NewMovie"] as Movie;
    var bestActor=ViewData["BestActor"] as Actor;

}

<section class="text-gray-600 body-font">
    <div class="container px-5 py-5 mx-auto flex flex-wrap">
        <div class="lg:w-2/3 mx-auto">
            <div class="flex flex-wrap w-full bg-gray-700 py-32 px-10 relative mb-4">
                <img alt="gallery" class="w-full object-cover h-full object-center block opacity-10 absolute inset-0" src=@bestMovie.Image.Path>
                <div class="text-center relative z-10 w-full">
                    <h2 class="text-6xl font-extrabold text-amber-300 font-medium title-font mb-2">The Best Movie</h2>
                    <p class=" text-4xl font-extrabold text-amber-300 leading-relaxed">@bestMovie.Name</p>
                    <a asp-controller="Movie" asp-action="ShowMovie" asp-route-id="@bestMovie.Id" class="mt-3 text-yellow-600 inline-flex items-center">
                        Read More
                        <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                            <path d="M5 12h14M12 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
            <div class="flex flex-wrap -mx-2">
                <div class="px-2 w-1/2">
                    <div class="flex flex-wrap w-full bg-gray-700 sm:py-24 py-16 sm:px-10 px-6 relative">
                        <img alt="gallery" class="w-full object-cover h-full object-center block opacity-10 absolute inset-0" src=@newMovie.Image.Path>
                        <div class="text-center relative z-10 w-full">
                            <h2 class="text-6xl font-extrabold text-amber-300 text-xl font-medium title-font mb-2">New Movie</h2>
                            <p class=" text-4xl font-extrabold text-amber-300 leading-relaxed">@newMovie.Name</p>
                            <a asp-controller="Movie" asp-action="ShowMovie" asp-route-id="@bestMovie.Id" class="mt-3 text-yellow-600 inline-flex items-center">
                                Read More
                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="px-2 w-1/2">
                    <div class="flex flex-wrap w-full bg-gray-700 sm:py-24 py-16 sm:px-10 px-6 relative">
                        <img alt="gallery" class="w-full object-cover h-full object-center block opacity-10 absolute inset-0" src=@bestActor.Image.Path>
                        <div class="text-center relative z-10 w-full">
                            <h2 class="text-6xl font-extrabold text-amber-300 text-xl  font-medium title-font mb-2">The Best Actor</h2>
                            <p class=" text-4xl font-extrabold text-amber-300 leading-relaxed">@bestActor.Name @bestActor.LastName</p>
                            <a asp-controller="Actor" asp-action="ShowActor" asp-route-id="@bestActor.Id" class="mt-3 text-yellow-600 inline-flex items-center">
                                Read More
                                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
